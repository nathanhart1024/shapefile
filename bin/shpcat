#!/usr/bin/env node

var shp = require("../shp");

shp.open(process.argv[2] || "/dev/stdin")
  .then((file) => file.header()
    .then((header) => console.log("header", header))
    .then(function next() { return file.record().then((record) => record && (console.log("record", record), next())); })
    .catch((error) => file.close().then(() => { throw error; }))
    .then(() => (console.log("end"), file.close())))
  .catch((error) => console.error(error.stack));
